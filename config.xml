<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.karimo.unitconv"
    version   = "1.1.0">

<name>Unit Converter</name>

<description>
A unit converter app for Android. 
</description>

<author href="https://www.simpledevcode.wordpress.com" email="karimo94@outlook.com">
Karim Oumghar
</author>
<feature name="http://api.phonegap.com/1.0/network"/>

<icon src="converter.png" />

<gap:plugin name="org.apache.cordova.splashscreen" />
<gap:splash src="splashscreen.jpg"/>
<preference name="SplashScreenDelay" value="3700" />
<preference name="android-targetSdkVersion" value="29" />
<access origin="*" />
<plugin name="cordova-plugin-whitelist" version="1" />
<allow-intent href="http://*/*" />
<allow-intent href="https://*/*" />
<allow-intent href="tel:*" />
<allow-intent href="sms:*" />
<allow-intent href="mailto:*" />
<allow-intent href="geo:*" />
<platform name="android">
    <allow-intent href="market:*" />
</platform>
<platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
</platform>
</widget>
